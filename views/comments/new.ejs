<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="form-header">Add New Comment to <%= campground.name %></h1>
        <div class="form-div">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="../">Go Back</a>
        </div>
    </div>
    
</div>


<% include ../partials/footer %>