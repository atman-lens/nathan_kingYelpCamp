<% include ../partials/header %>
<div class="container form-container">
    <div class="row">
        <h1 style="text-align: center;">Edit Comment</h1>
        <div class="form-div">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                        <textarea class="form-control" name="comment[text]"><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-custom btn-block">Submit!</button>
                </div>
            </form>
            <a href="javascript:history.back()">Go Back</a>
        </div>
    </div>
    
</div>


<% include ../partials/footer %>