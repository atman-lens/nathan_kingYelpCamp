<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="form-header">Create a New Campground</h1>
        <div class="form-div">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="price" placeholder="Price (USD)" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="image" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="description">Description</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-custom btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
    
</div>


<% include ../partials/footer %>