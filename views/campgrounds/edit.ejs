<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="form-header">Edit <%= campground.name %></h1>
        <div class="form-div">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    Name:
                    <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    Price (USD):
                    <input type="number" class="form-control" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    Image URL:
                    <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
                    <img class="edit-image thumbnail" src="<%= campground.image %>">
                </div>
                <div class="form-group">
                    Description:
                    <textarea class="form-control" name="campground[description]"><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-custom btn-block">Submit!</button>
                </div>
            </form>
            <a href="javascript:history.back()">Go Back</a>
        </div>
    </div>
    
</div>


<% include ../partials/footer %>